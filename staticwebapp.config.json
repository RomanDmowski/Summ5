
{
  "routes": [
    {
      "route": "/api/*",
      "methods": ["POST"],
      "rewrite": "/api/summarize"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/api/*"]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}
